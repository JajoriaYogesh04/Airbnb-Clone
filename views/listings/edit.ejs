<% layout("/layouts/boilerplate") -%>
    <body>
        <h2 class="mt-3 offset-2">Edit Listing</h2>
        <div class="row">
            <div class="col-8 offset-2">
                <form action="/listing/<%=editListing._id%>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" placeholder="Enter Title" name="listing[title]" value="<%=editListing.title%>" class="form-control" required>
                        <div class="valid-feedback">Title looks good!</div>
                        <div class="invalid-feedback">Please enter a valid Title</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description" placeholder="Enter Description" class="form-control" required><%=editListing.description%></textarea>
                        <div class="valid-feedback">Description looks good!</div>
                        <div class="invalid-feedback">Please enter a valid Description</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input type="file" name="listing[image]" id="image" placeholder="Enter Image Link" value="<%=editListing.image%>" class="form-control">
                        <div class="valid-feedback">Image looks good!</div>
                        <div class="invalid-feedback">Please enter a valid Image URL</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="text" placeholder="Enter Price" id="price" name="listing[price]" value="<%=editListing.price%>" class="form-control" required>
                            <div class="valid-feedback">Price looks good!</div>
                            <div class="invalid-feedback">Please enter a valid Price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" placeholder="Enter Country" id="country" name="listing[country]" value="<%=editListing.country%>" class="form-control" required>
                            <div class="valid-feedback">Country looks good!</div>
                            <div class="invalid-feedback">Please enter a valid Country</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" placeholder="Enter Location" id="location" name="listing[location]" value="<%=editListing.location%>" class="form-control" required>
                        <div class="valid-feedback">Location looks good!</div>
                        <div class="invalid-feedback">Please enter a valid Location</div>
                    </div>
                    <button class="mt-3 mb-3 btn btn-dark edit-submit-btn">SUBMIT</button>
                </form>
            </div>
        </div>
        <br><br><br><br>
    </body>
    