<% layout("/layouts/boilerplate") -%>
    <body>
        <h1 class="offset-3"><%= listing.title %></h1>
        <div class="row">
            <div class="col-6 offset-3 show-card">
                <div class="card">
                    <img src="<%= listing.image %>" class="card-img-top show-img" alt="show_image">
                    <div class="card-body">
                        <p class="card-text">
                            <!-- <b><%= listing.title %></b><br> -->
                            <%= listing.description %><br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                            <%= listing.country %> <br>
                            <%= listing.location %> <br>
                        </p>
                    </div>
                </div>
                <div class="edit-delete-button">
                    <div class="row">
                        <form class="col-1" action="/listing/<%=listing._id%>/edit" method="GET">
                            <button class="btn edit-button">&nbsp;&nbsp;&nbsp;&nbsp;EDIT&nbsp;&nbsp;&nbsp;&nbsp;</button>
                        </form>
                        <!-- <a href="/listing/<%=listing._id%>/edit">EDIT</a> -->
                        <form class="col-1 offset-1" action="/listing/<%=listing._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-dark">DELETE</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="review-form mt-3 mb-3 col-8 offset-2">
                <hr>
                <h4>Leave a Review</h4>
                <form>
                    <div class="rating mt-3 mb-3">
                        <label for="range" class="form-label">Rating</label> 
                        <input type="range" id="range" min="1" max="5" name="review[rating]" class="form-range">
                    </div>
                    <div class="comment mt-3 mb-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" rows="5" cols="" placeholder="write a comment..." class="form-control"></textarea>
                    </div>
                </form>
            </div>
        </div>
        
    </body>
